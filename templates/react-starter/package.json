{
  "name": "react-scorm-course",
  "version": "1.0.0",
  "type": "module",
  "description": "React SCORM course with Vite",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "package": "npm run package:scorm",
    "package:scorm": "npm run build && npx package-scorm -i dist -o course.zip --title 'My React SCORM Course'",
    "package:xapi": "npm run build && npx package-xapi -i dist -o course-xapi.zip --title 'My React xAPI Course'"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "scorm-xapi-wrapper": "^1.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0"
  }
}

